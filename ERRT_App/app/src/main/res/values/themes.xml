<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BlocFireBase" parent="Theme.BlocFireBase.Base"/>

    <!-- Base application theme. -->
    <style name="Theme.BlocFireBase.Base" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/baseLight</item>
        <item name="colorPrimaryVariant">@color/lighterLight</item>
        <item name="colorOnPrimary">@color/baseGrey</item>
        <item name="android:textColorPrimary">@color/baseLight</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/baseGrey</item>
        <item name="colorSecondaryVariant">@color/lighterGrey</item>
        <item name="colorOnSecondary">@color/baseLight</item>
        <item name="android:textColorSecondary">@color/debugColor</item>

        <!-- Surface Colors. -->
        <item name="colorSurface">?attr/colorSecondary</item>
        <item name="colorOnSurface">@color/clearColor</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">?attr/colorPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Shadow setup -->
        <item name="android:ambientShadowAlpha">0.7</item>
        <item name="android:spotShadowAlpha">0.7</item>

        <!-- Styles -->
        <item name="navigationViewStyle">@style/BlocFireBase.Drawer</item>
        <item name="toolbarStyle">@style/Theme.BlocFireBase.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Theme.BlocFireBase.BottomBar</item>
        <item name="materialCardViewStyle">@style/Theme.BlocFireBase.CardView</item>
        <item name="textInputStyle">@style/Theme.BlocFireBase.Input</item>
        <item name="materialButtonStyle">@style/Theme.BlocFireBase.Button</item>
        <item name="extendedFloatingActionButtonStyle">@style/Theme.BlocFireBase.FloatingButtonExtended</item>
        <item name="snackbarStyle">@style/Theme.BlocFireBase.SnackBar</item>
        <item name="snackbarTextViewStyle">@style/Theme.BlocFireBase.SnackBar.TextView</item>
        <item name="android:textViewStyle">@style/Theme.BlocFireBase.SnackBar.TextView</item>

    </style>

    <!-- OTHER THEMES -->
    <style name="Theme.BlocFireBase.Christmas" parent="Theme.BlocFireBase">
        <item name="colorPrimary">@color/baseRed</item>
        <item name="colorSecondary">@color/baseGreen</item>
    </style>

    <!-- OTHER THEMES -->


    <!-- DRAWER -->
    <style name="BlocFireBase.Drawer" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">?attr/colorPrimary</item>
        <item name="itemTextColor">?attr/colorPrimary</item>
        <item name="elevation">@dimen/shadow_elevation</item>
    </style>

    <!-- TOOLBAR -->
    <style name="Theme.BlocFireBase.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="cardElevation">@dimen/shadow_elevation</item>
        <item name="navigationIconTint">?attr/colorPrimary</item>
    </style>

    <!-- BOTTOM NAVIGATION VIEW -->
    <style name="Theme.BlocFireBase.BottomBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="background">?attr/colorSecondary</item>
        <item name="elevation">@dimen/shadow_elevation</item>
        <item name="itemIconTint">@color/selectables_buttons_color</item>
        <item name="itemRippleColor">@color/baseLightAlphaLow</item>
    </style>

    <style name="Theme.BlocFireBase.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:elevation">@dimen/shadow_elevation</item>
    </style>

    <style name="Theme.BlocFireBase.Input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">@dimen/tiny</item>
        <item name="boxStrokeWidthFocused">@dimen/tiny</item>
        <item name="boxStrokeErrorColor">@color/baseRed</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="hintTextColor">@color/lighterLight</item>
        <item name="startIconTint">?attr/colorPrimary</item>
        <item name="endIconTint">?attr/colorPrimary</item>
    </style>

    <!-- BUTTON -->
    <style name="Theme.BlocFireBase.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="rippleColor">@color/darkestLight</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">@dimen/shadow_elevation</item>
    </style>

    <style name="Theme.BlocFireBase.Button.NoShadow" parent="Theme.BlocFireBase.Button">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Theme.BlocFireBase.FloatingButtonExtended" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="elevation">200dp</item>
    </style>

    <style name="Theme.BlocFireBase.SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="elevation">@dimen/shadow_elevation</item>
    </style>

    <style name="Theme.BlocFireBase.SnackBar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.BlocFireBase.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>